{
  "functions": {
    "app/api/shop/webhook/route.ts": {
      "maxDuration": 30
    },
    "app/api/wind-forecast/scheduler/route.ts": {
      "maxDuration": 60
    },
    "app/api/analytics/cron/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/wind-forecast/scheduler",
      "schedule": "0 */3 * * *"
    },
    {
      "path": "/api/analytics/cron",
      "schedule": "0 9 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/shop/webhook",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, stripe-signature"
        }
      ]
    }
  ]
}
